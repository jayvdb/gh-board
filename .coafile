[all]
ignore = node_modules/**, dist/**, .git/**

[all.SpaceConsistencyBear]
files = **.js, **.json, **.yml, **.yaml, **.md
bears = SpaceConsistencyBear
use_spaces = true
ignore += src/gantt-chart.js

[all.json]
bears = JSONFormatBear
files = **.json
indent_size = 2

[all.js]
bears = ESLintBear
eslint_config = .eslintrc.json
files = **.js
ignore += src/gantt-chart.js

[all.markdown]
bears = MarkdownBear
files = **.md

[all.yaml]
bears = YAMLLintBear
files = **.yml, **.yaml
